---
// Style Imports
import '../styles/main.scss';

// Component Imports
import MainLayout from '../layouts/MainLayout.astro';

let title = 'The Beloved\'s Blog HTML Template';
---

<MainLayout bodyClass="page-archive-folder bg-accent-1">
	<section class="hero-section">
		<div class="container">
			<header class="hero-header">
				<h1 class="hero-title">Archive</h1>
			</header>
		</div>
	</section>

  	<section class="featured-section">
		<div class="container">
			<header class="section-header">
				<h2 class="section-title">Featured Post</h2>
			</header>

			<article class="featured-post">
				<h3 class="post-title">Lorem Ipsum</h3>
				<p class="post-date">7 Apr 2022</p>
				<div class="btn-container">
					<a href="/post" class="btn btn-primary">View Post</a>
				</div>
			</article>
		</div>
	</section>

	<section class="content-section bg-primary-light">
		<div class="container">
			<div class="folder-list">
				<a href="/archive-list" class="folder-item">Apr 2022</a>
				<a href="/archive-list" class="folder-item">Mar 2022</a>
				<a href="/archive-list" class="folder-item">Feb 2022</a>
				<a href="/archive-list" class="folder-item">Jan 2022</a>
				<a href="/archive-list" class="folder-item">Dec 2021</a>
				<a href="/archive-list" class="folder-item">Nov 2021</a>
				<a href="/archive-list" class="folder-item">Oct 2021</a>
				<a href="/archive-list" class="folder-item">Sep 2021</a>
			</div>
		</div>
	</section>
</MainLayout>